%define% RTC_SECONDS    0x1FE00200
%define% RTC_MINUTES    0x1FE00204
%define% RTC_HOURS      0x1FE00208
%define% RTC_DAY        0x1FE0020C
%define% RTC_MONTH      0x1FE00210
%define% RTC_YEAR       0x1FE00214
%define% RTC_WEEKDAY    0x1FE00218
%define% RTC_UNIX       0x1FE00220

section .data
    time db "Date: \0"

_rtc_2putbase:
    cmp r0, 10
    jge .end
    bl _putc, '0'
.end:
    bl _putbase, r0, 10
    ret

_print_time:
    mov r1, RTC_DAY
    bl _puts, time
.loop:
    ldd r0, r1
    bl _rtc_2putbase, r0
    add r1, 4
    cmp r1, RTC_YEAR
    jgt .loop_2_entry
    bl _putc, '.'
    jmp .loop
.loop_2_entry:
    sub r1, 16
    bl _putc, ' '
.loop_2:
    ldd r0, r1
    bl _rtc_2putbase, r0
    sub r1, 4
    cmp r1, RTC_SECONDS
    jlt .end
    bl _putc, ':'
    jmp .loop_2
.end:
    bl _putc, '\n'
    ret
