_memset:
    and r1, 0xFF        ; masking set value with byte mask so it doesnt exceed expectations
    add r2, r0          ; adding base address to lenght to have the end address
    jmp .loop_continue
.loop:
    stb r0, r1          ; setting value at address
    inc r0
.loop_continue:
    sub r3, r2, r0      ; calculating remaining lenght
    jnz r3, .loop       ; in-case r3 is still not zero we continue
    ret

_memcpy:
    add r3, r0, r2      ; calculating end address of destination
.loop:
    ldb r4, r1
    stb r0, r4
    inc r0, r1
.loop_continue:
    cmp r0, r3
    jle .loop
    ret
