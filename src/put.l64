_putc:
    bl _uart_putc
    ret

_getc:
    bl _uart_getc
    ret

_puts:
.start:
    ldb r1, r0
    inc r0
    bl _putc, r1
    jnz r1, .start
    ret

_putbase:
    mov rr, 0
    jnz r0, .start
    bl _putc, '0'
    ret
.start:
    push 0
.loop:
    div r2, r0, r1
    mul r4, r2, r1
    sub r0, r4
    cmp r0, 10
    jlt .digit
    add r0, 39
.digit:
    add r0, 48
.push:
    inc rr
    push r0
    mov r0, r2
    jnz r0, .loop
.print:
    pop r0
    bl _putc
    jnz r0, .print
    ret
